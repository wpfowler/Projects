@model GuildCars.Models.Models.Queries.HomePageQueryModel

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Specials.Count(); i++)
            {
                if (i == 0)
                {
                    @Html.Raw("<div class='item active'><H2><a href=/Home/Specials>")
                    @Html.DisplayFor(m => Model.Specials[i].Description)

                    @Html.Raw("</a></H2></div>")
                }
                else
                {
                    @Html.Raw("<div class='item'><H2><a href=/Home/Specials>")
                    @Html.DisplayFor(m => Model.Specials[i].Description)
                    @Html.Raw("</a></H2></div>")
                }
            }
        </div>

    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>
@{ 
    for (int i = 0; i< Model.FeaturedVehicles.Count; i++)
    {
        var imgPath = Url.Content("~/Images/") + Model.FeaturedVehicles[i].ImageFileName;


        if (i == 0)
        {
            @Html.Raw("<div class='row'><div class='col-md-12'>")
        }

        var price = String.Format("{0:C}", Model.FeaturedVehicles[i].SalePrice);

        @Html.Raw("<div class='col-md-4 text-center'>")
        <text><br /><img src="@imgPath" /><br /></text>
        @Html.DisplayFor(m => Model.FeaturedVehicles[i].MakeDescription)<br />
        @Html.DisplayFor(m => Model.FeaturedVehicles[i].ModelDescription)<br />
        @Html.DisplayFor(m=>price)
        @Html.Raw("</div>")

        if (i + 1!= 1 && (i + 1) % 3 == 0 && (i+ 1) != Model.FeaturedVehicles.Count - 1)
        {
         @Html.Raw("</div></div><div class='row'>")
        }
        else if(i == Model.FeaturedVehicles.Count -1 )
            {
                @Html.Raw("</div></div>")
            }
    }
}