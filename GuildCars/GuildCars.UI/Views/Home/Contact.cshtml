@model GuildCars.Models.Models.Tables.Contacts


<div class="row">
    <div class="col-xs-12">
        <h3>Contact Us</h3>
        @Html.ActionLink("Home", "Index", "Home")
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", placeholder = "CustomerName", required = "required", title = "Please enter a name" })

            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required", title = "Please Enter a valid email address" })
            </div>
            <div class="form-group">
                <label>Phone</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type = "phone", required = "required", placeholder = "Phone", title = "Enter a valid phone" })
            </div>
            <div class="form-group">
                <label>Message</label>
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", required = "required", placeholder = "Message" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
    <div class="row">
        <div class="col-md-6">
            <img src="~/Images/map.jpg" /><br />
            <text>111 Springvale Rd.</text><br />
            <text>Louisville, Ky 040404</text><br />
            <text>Sales:111-111-1111</text><br />
            <text>Service: 111-111-1112</text>
        </div>
    </div>
</div>

 